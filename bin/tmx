#!/usr/bin/env python

import os
import argparse
import subprocess

parser = argparse.ArgumentParser()
parser.add_argument('-t', '--template', default = 'default', required = False, help = 'The template you wish to use for the tmux session', metavar = 'TEMPLATE_NAME')
parser.add_argument('-p', '--project', required = False, help = 'The tmux session name', metavar = 'PROJECT_NAME')
parser.add_argument('-w', '--workspace', default = os.getcwd(), required = False, help = 'The directory you want to work in within the tmux session', metavar = 'DIRECTORY')
args = parser.parse_args()

args.project = args.project or args.template.title()

subprocess.call('tmuxinator start {} project={} workspace={}'.format(args.template, args.project, args.workspace), shell = True)
