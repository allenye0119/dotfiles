## oh-my-zsh

export ZSH=$HOME/.oh-my-zsh
ZSH_CUSTOM=$ZSH/custom

# theme
ZSH_THEME='spaceship'
SPACESHIP_PROMPT_ORDER=(user host dir git conda node golang haskell line_sep char)
SPACESHIP_RPROMPT_ORDER=(jobs exec_time)
SPACESHIP_PROMPT_FIRST_PREFIX_SHOW='true'

SPACESHIP_CHAR_COLOR_SUCCESS=''

SPACESHIP_USER_SHOW='always'
SPACESHIP_USER_PREFIX='# '
SPACESHIP_USER_COLOR='blue'

SPACESHIP_HOST_SHOW='always'
SPACESHIP_HOST_PREFIX='@ '
SPACESHIP_HOST_COLOR='cyan'

SPACESHIP_DIR_PREFIX='∈ '
SPACESHIP_DIR_COLOR='yellow'

SPACESHIP_GIT_STATUS_DELETED='x'
SPACESHIP_CONDA_SYMBOL=' '
SPACESHIP_NODE_SYMBOL=' '
SPACESHIP_GOLANG_SYMBOL=' '
SPACESHIP_HASKELL_SYMBOL=' '
SPACESHIP_JOBS_SYMBOL='◈'

SPACESHIP_EXEC_TIME_PREFIX=''
SPACESHIP_EXEC_TIME_ELAPSED=5

# plugins
plugins=(aye git tmux colored-man-pages extract zsh-nvm)

# general
DISABLE_AUTO_TITLE="true"
HYPHEN_INSENSITIVE="true"

source $ZSH/oh-my-zsh.sh


## General

# environment variables
export TERM=screen-256color
export SHELL=/bin/zsh
export EDITOR=vim

# eval
if whence dircolors > /dev/null; then
	eval "$(dircolors ~/.dircolors)"
fi

if whence direnv > /dev/null; then
	eval "$(direnv hook zsh)"
fi

# alias
alias cfgzsh="vim ~/.zshrc"
alias srczsh="source ~/.zshrc"
alias cfgtmux="vim ~/.tmux.conf"
alias srctmux="tmux source ~/.tmux.conf"

if whence trash-put > /dev/null; then
	alias tp="trash-put"
fi

