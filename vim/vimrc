vmap  <expr>  <UP>     DVB_Drag('up')
vmap  <expr>  D        DVB_Duplicate()
let g:DVB_TrimWS = 1




""""""""""""""""""""
" General Settings "
""""""""""""""""""""

" some stuff
syntax on
set wildmenu
set wildignore+=*.swp,*.swo,*swn,*.zip,*.png,*.jpg,*jpeg,*pdf,.git,__pycache__
set foldenable
set mouse=a
set timeoutlen=500
set backspace=indent,eol,start
set scrolloff=8
set iskeyword-=_,A-Z

" color
set t_Co=256
set background=dark
colorscheme solarized

" line indicators
set colorcolumn=81
set cursorline
set cursorcolumn
highlight Normal ctermbg=none

" tab
set expandtab
set tabstop=4
set softtabstop=4
set shiftwidth=4

" indentation
set autoindent
set smartindent

" search
set showmatch
set incsearch
set hlsearch
set ignorecase
set smartcase

" line number
set number
set nuw=6
set relativenumber

" buffer
set hidden




""""""""""""
" Mappings "
""""""""""""

" source/edit vimrc
nnoremap <silent> <leader>sv :source ~/.vimrc<CR>
nnoremap <silent> <leader>ev :e ~/.vimrc<CR>

" disable up/down/left/right
nnoremap <Up> <NOP>
nnoremap <Down> <NOP>
nnoremap <Left> <NOP>
nnoremap <Right> <NOP>

inoremap <Up> <NOP>
inoremap <Down> <NOP>
inoremap <Left> <NOP>
inoremap <Right> <NOP>

" open/save/close buffer
nnorema <leader>e :e<space>
nnorema <silent> <leader>w :w<CR>
nnorema <silent> <leader>x :bd<CR>
nnorema <silent> <leader>q :qa<CR>

" navigate through buffer
nnoremap <silent> <Left> :bp<CR>
nnoremap <silent> <Right> :bn<CR>
inoremap <silent> <Left> <esc>:bp<CR>
inoremap <silent> <Right> <esc>:bn<CR>

" escape
inoremap kj <esc>
inoremap jk <esc>

" :->;
nnoremap ; :

" move between vertical split windows
nnoremap <c-h> <c-w>h
nnoremap <c-l> <c-w>l

" move to start/end of line
nnoremap H ^
nnoremap L $

" fast moving
nnoremap <c-f> <c-f>zz
nnoremap <c-b> <c-b>zz

" move line up/down one line
nnoremap - ddkP
nnoremap _ ddp

" select previously selected text
nnoremap <leader>ss gv

" select pasted text
nnoremap <leader>sp `[v`]

" select innerword
nnoremap <space> viw
inoremap <c-space> <esc>lviw

" copy and paste current line
nnoremap pp Vyp

" delete current line in insert mode
inoremap <c-d> <esc>ddi

" undo in insert mode
inoremap <c-u> <esc>ui

" toggle upper/lower case of a word
nnoremap <c-c> viw~
inoremap <c-c> <esc>lviw~i

" remove highlight
nnoremap <silent> <leader><CR> :nohl<CR>

" toggle paste mode
nnoremap <silent> <leader>pp :setlocal paste!<CR>

" jump to the last position when opening a file
autocmd BufReadPost * if line("'\"") > 0 && line("'\"") <= line("$")
    \| exe "normal! g'\"" | endif
