    \ 'a': ' #S',
    \ 'win': ['#I', '#W#F'],
    \ 'cwin': ['#I', '#W#F'],
    \ 'x': [
        \ "C #(uptime | cut -d ' ' -f 14 | tr -d ',')%",
        \ "M #(free -h | sed '2!d' | tr -s ' ' | cut -d ' ' -f 3)",
        \ "G #(nvidia-smi -q | grep -A3 FB | grep Used | tr -s ' ' | cut -d ' ' -f 4) MiB"],
    \ 'y': ' %H:%M',
    \ 'z': ' %a, %b %d %Y',
    \ 'options': {'status-justify': 'left'}}
